{{#if success}}
    <div class="alert alert-success">
        <ul>
            {{#each success}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}

{{#if errors}}
    <div class="alert alert-danger">
        <ul>
            {{#each errors}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
{{/if}}



<section class="py-5">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-lg-5">
            <div class="col-md-6">
                <h2>Confirmar email para redifinir senha</h2>
                <form action="/forgot-password" method="POST" enctype="multipart/form-data">

                    <div class="mb-3">
                        <input name="email" class="form-control bg-light" placeholder="Email" type="email">
                    </div>


                    <button class="btn btn-primary" type="submit">Confirmar</button>
                </form>
            </div>
        </div>
    </div>
</section>