{{#if messageError}}
<div class="alert alert-danger">
    <ul>
        <li>{{messageError}}</li>
    </ul>
</div>
{{/if}}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center text-center mb-3 mb-lg-5">
            <div class="col-md-6">
                <h1>Reset senha</h1>
                <form action="/reset-password?token={{passwordResetData.token}}" method="POST">
                    <input type="hidden" name="user_id" value="{{passwordResetData.user_id}}">
                    <input type="password" class="form-control bg-light" name="password" placeholder="Nova senha">
                    <br><br>
                    <input type="password" class="form-control bg-light" name="password2"
                        placeholder="Confirme a senha">
                    <br><br>
                    <input type="submit" class="btn btn-primary" value="Resetar senha">
                </form>

            </div>
        </div>
    </div>
</section>